<form action="/figures" method="post">
  <p><label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name"></p>
  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %></input></p>
  <% end %>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="title_name">
  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<% landmark.id %>"><% landmark.name %></input>
  <% end %>
  <h2>Create New Landmark:</h2>
  <input type="text" name="landmark[name]" id="landmark_name">
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
</form>
